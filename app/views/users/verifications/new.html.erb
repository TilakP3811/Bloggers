<div class='border border-stone-300 mx-auto bg-white py-4 px-4 w-full md:w-7/12 lg:w-5/12'>
  <div class='border-b border-stone-300'>
    <h2 class='text-lg font-semibold text-primary mb-2'>Account verification</h2>
  </div>

  <div class='py-2'>
    <%= form_for('verification', url: users_verifications_path, html: { method: :post }) do |f| %>
      <div class="py-2 px-4 mb-2 text-sm border border-blue-200 text-blue-800 rounded bg-blue-50" role="alert">
        You should received an confirmation email. Please check your email for verification code
      </div>
      <%= f.hidden_field :registration_uuid, value: params[:registration_uuid] %>

      <div class="mb-2">
        <%= f.label :activation_code, class: 'block mb-2 text-sm font-medium text-primary dark:text-white' %>
        <%= f.text_field :activation_code, autocomplete: 'off', class: "block w-full p-2 text-primary border border-stone-300 bg-gray-50 sm:text-xs focus:ring-primary focus:border-primary dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>

      <div class="mt-3 mb-1">
        <%= f.submit "Verify", class: 'px-3 py-2 text-xs font-medium text-center inline-flex items-center text-primary border border-primary rounded hover:bg-primary hover:text-white focus:ring-1 focus:outline-none focus:ring-secondary cursor-pointer' %>
      </div>
    <% end %>
  </div>
</div>
