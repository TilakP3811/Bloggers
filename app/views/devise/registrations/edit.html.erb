<div class='border border-stone-300 mx-auto bg-white py-4 px-4 w-full md:w-7/12 lg:w-5/12'>
  <div class='border-b border-stone-300'>
    <h2 class='text-lg font-semibold text-primary mb-2'>Edit <%= resource_name.to_s.humanize %></h2>
  </div>

  <div class='py-2 border-b border-stone-300'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-2">
        <%= f.label :new_password, class: 'block mb-2 text-sm font-medium text-primary dark:text-white' %>
        <%= f.password_field :password, autocomplete: 'off', class: "block w-full p-2 text-primary border border-stone-300 bg-gray-50 sm:text-xs focus:ring-primary focus:border-primary dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>

      <div class="mb-2">
        <%= f.label :password_confirmation, class: 'block mb-2 text-sm font-medium text-primary dark:text-white' %>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: "block w-full p-2 text-primary border border-stone-300 bg-gray-50 sm:text-xs focus:ring-primary focus:border-primary dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>

      <div class="mb-2">
        <%= f.label :current_password, class: 'block mb-2 text-sm font-medium text-primary dark:text-white' %>
        <%= f.password_field :current_password, autocomplete: 'off', class: "block w-full p-2 text-primary border border-stone-300 bg-gray-50 sm:text-xs focus:ring-primary focus:border-primary dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>

      <div class="mt-3 mb-1">
        <%= f.submit "Update", class: 'px-3 py-2 text-xs font-medium text-center inline-flex items-center text-primary border border-primary rounded hover:bg-primary hover:text-white focus:ring-1 focus:outline-none focus:ring-secondary cursor-pointer' %>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'ml-1 px-3 py-2 text-xs font-medium text-center inline-flex items-center text-white bg-primary border border-primary rounded hover:bg-white hover:text-primary focus:ring-1 focus:outline-none focus:ring-secondary cursor-pointer' %>
      </div>
  <% end %>
  </div>

  <div class="mt-2"><%= link_to "Back", :back, class: 'text-sm text-primary hover:underline hover:decoration-solid' %></div>
</div>
